Map<String,List<Integer>> distMap;
    
    public WordDistance(String[] wordsDict) {
        distMap = new HashMap<>();
        int index = 1;
        for(String str : wordsDict){
            List<Integer> temp = distMap.getOrDefault(str,new ArrayList<>());
            temp.add(index++);
            distMap.put(str,temp);
        }
    }
    
    public int shortest(String word1, String word2) {
        List<Integer> list1 = distMap.get(word1);
        List<Integer> list2 = distMap.get(word2);
        int minDist=Integer.MAX_VALUE;
        
        for(int i=0,j=0;i<list1.size()&&j<list2.size();){
            int index1 = list1.get(i);
            int index2 = list2.get(j);
            minDist = Math.min(minDist,Math.abs(index1-index2));
            if(index1 < index2)
                i++;
            else 
                j++;                      
        }
        
        return minDist;
    }
